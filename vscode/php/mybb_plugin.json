{
	"MyBB plugin base": {
		"prefix": "mybb_plugin",
		"body": [
			"if (!defined('IN_MYBB')) {",
			"\tdie('Directly initialization of this file is not allowed.');",
			"}",
			"",
			"function ${1:name}_info()",
			"{",
			"\treturn [",
			"\t\t'name' => '$2',",
			"\t\t'description' => '$3',",
			"\t\t'website' => '$4',",
			"\t\t'author' => 'chack1172',",
			"\t\t'authorsite' => 'https://www.chack1172.altervista.org/',",
			"\t\t'version' => '${5:1.0.0}',",
			"\t\t'compatibility' => '18*',",
			"\t\t'codename' => '$1'",
			"\t];",
			"}",
			"",
			"function $1_install()",
			"{",
			"\t\t$0",
			"}",
			"function $1_is_installed()",
			"{",
			"\t",
			"}",
			"",
			"function $1_uninstall()",
			"{",
			"\t",
			"}",
			"",
			"function $1_activate()",
			"{",
			"\t",
			"}",
			"",
			"function $1_deactivate()",
			"{",
			"\t",
			"}",
			""
		],
		"description": "Create a default mybb plugin structure"
	}
}